<mvc:View controllerName="podprojekt.controller.ActiveTour"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified" 
    xmlns:tnt="sap.tnt" displayBlock="true">
    <Page id="activetourPageId" title="{i18n>activetourPageTitle}">
        <customHeader>
                <Bar>
                    
                    <contentLeft>
                    </contentLeft>
                    <contentMiddle>
                        <Label text="{i18n>activetourPageTitle}"/>
                    </contentMiddle>
                    <contentRight>
                    </contentRight>

                </Bar>
            </customHeader>
        <content>
            <form:SimpleForm id="sContent1" editable="true" title="" breakpointXL="2000" layout="ResponsiveGridLayout" breakpointM="2000">
                <form:content>
                    <List id="stopSelectionList" items="{StopModel>/results}" noDataText="{i18n>noDataAvailable}"
                        growing="true" growingThreshold="10" busyIndicatorDelay="500"
                         rememberSelections="false">
                        <headerToolbar>
                            <OverflowToolbar id="OvtbTourselect">
                                <Title id="ueberschrift" text="{i18n>activeTour}&#13;{TourStartFragmentModel>/tour/routeCaption}" level="H1"/>
                                <ToolbarSpacer/>
                            </OverflowToolbar>
                        </headerToolbar>
                        
                        <CustomListItem press="onStopListItemPressed" type="Active">
                            <Bar class="sapUiTinyMarginBottom">
                                <contentLeft>
                                    <Title text="{StopModel>addressName1}" level="H5"></Title>
                                </contentLeft>
                                <contentRight>
                                    <Label text="{StopModel>loadingUnitsCount}"></Label>
                                </contentRight>
                            </Bar>
                            <HBox >
                                <VBox width="93%" >
                                    <Label text="{StopModel>street} {StopModel>streetNumber}" class="sapUiSmallMarginBegin"></Label>
                                    <Label text="{StopModel>country} {StopModel>zipCode} {StopModel>city}" class="sapUiSmallMarginBegin"></Label>
                                </VBox>
                                <VBox width="7%">
                                    <core:Icon src="sap-icon://navigation-right-arrow" class="sapUiTinyMarginTop"></core:Icon>
                                </VBox>
                            </HBox>
                            
                        </CustomListItem>
                    </List>
                </form:content>
            </form:SimpleForm>
        </content>
    </Page>
</mvc:View>