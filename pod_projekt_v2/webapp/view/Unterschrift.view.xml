<mvc:View xmlns:table="sap.ui.mdc.table" controllerName="podprojekt.controller.Unterschrift"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form" displayBlock="true"
    xmlns:customControl="podprojekt.custom">
    <Page id="UnterschriftPageId">
        <customHeader>
            <Bar>
                <contentLeft>
                </contentLeft>
                <contentMiddle>
                    <Label text="{i18n>signingPageTitle}"/>
                </contentMiddle>
                <contentRight>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm layout="ResponsiveGridLayout">
                <form:content>
                    <Bar>
                        <contentMiddle>
                            <Title id="OvtbTitle" text="{i18n>driver}" level="H2" />
                        </contentMiddle>
                    </Bar>
                    <Label text="{i18n>adress}"/>
                    <Text text="{StopInformationModel>/tour/addressName1}&#13;&#10;{StopInformationModel>/tour/zipCode} {StopInformationModel>/tour/city}" width="100%"/>
                    <Label text="{i18n>deliveryNoteNumber}"/>
                    <Text text="{StopInformationModel>/tour/shipmentNumber}"/>
                    
                    <Label text="{i18n>numberedDispatchUnits}"/>
                    <Text text="{= ${StopInformationModel>/tour/loadingUnits}.length} {i18n>unloaded}"/>
                    
                    <Text text="X Lieferscheine / Y Retouren bearbeitet."/><!--TODO: Hier muss ich noch die Liste ueberarbeiten, damit eine 2 Listen (Lieferscheine und Retouren) amgezeigt werden kÃ¶nnen-->
                    <Label text="{i18n>loadingDevices}"/>
                    <Text text="A {i18n>abgeladen}, B {i18n>aufgeladen}"/>
                    <Label id="txtUnterschrift"/>
                    <Text id="txtDatum" text="{i18n>dateAndTime}"/>
                    <Text text="Datum hier einfuegen"/>
                    <Label text="{i18n>geokoordinaten}"/>
                    <Text text="B:{StopInformationModel>/tour/startGeoB}, L:{StopInformationModel>/tour/startGeoL}"></Text>
                </form:content>
            </form:SimpleForm>
            <Label width="10%"></Label>
            <customControl:DigitalSignature id="digitalSignatureId" width="75%" height="30%"></customControl:DigitalSignature>
            <Button width="10%" icon="sap-icon://decline" press="onClearSignField"></Button>
        </content>

        <footer>
            <Bar>
                <contentLeft>
                    <Button text="Debugging Breakpoint" icon="sap-icon://sys-enter" press="onBreak"></Button>
                </contentLeft>
                <contentMiddle>
                </contentMiddle>
                <contentRight>
                    <Button text="{i18n>quittieren}" icon="sap-icon://sys-enter" press="onReceiptStop"></Button>
                </contentRight>
            </Bar>
        </footer>
        
    </Page>
</mvc:View>