<mvc:View controllerName="podprojekt.controller.Abladung"
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Page id="AbladungPageId">
        <customHeader>
            <Bar>                    
                <contentLeft>
                    <!--
                    <Button id="contact"  type="Transparent" icon="sap-icon://menu2" press="contactButton"/>
                    <Button id="help" type="Transparent" icon="sap-icon://navigation-left-arrow" press="onNavToStopInformation"/>
                    -->
                </contentLeft>
                <contentMiddle>
                    <Label text="{i18n>abladung}"/>
                </contentMiddle>
                <contentRight>
                    <!--Leer-->
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <form:SimpleForm id="currentTourInfoForm">
                <form:content>
                    <Text id="driverInfo" text="{i18n>Robin RÃ¶singer}&#10;"/>
                    <Title id="currentTourInfo" text="{i18n>currentTour}&#13;{TourStartFragmentModel>/tour/routeCaption}" wrapping="true" level="H2"/>
                        <HBox justifyContent="SpaceAround">
                            <Label text="{i18n>Adresse}"/>
                            <Text text="{StopInformationModel>/tour/addressName1}&#13;&#10;{StopInformationModel>/tour/street}{StopInformationModel>/tour/streetNumber}&#13;&#10;{StopInformationModel>/tour/country} {StopInformationModel>/tour/zipCode} {StopInformationModel>/tour/city}" width="100%"/>
                        </HBox>
                </form:content>
            </form:SimpleForm>

            <form:SimpleForm id="sContent1" editable="true" title="" breakpointXL="2000" layout="ResponsiveGridLayout" breakpointM="2000">
                <form:content>
                    <OverflowToolbar active="false" id="NVEBar"> <!-- press="onViewNVEs" -->
                        <content>
                            <!-- <core:Icon id="iconId" src="sap-icon://sys-add" class="sapUiTinyMarginBegin"/> -->
                            <Text id="NVEText" text="NVEs"/>
                            <ToolbarSpacer ></ToolbarSpacer>
                            <Button id="testBreakpointButton" press="onBreakpoint" icon="sap-icon://refresh" type="Emphasized"></Button>
                            <ToolbarSpacer/>
                            <Text id="txtNVEAnzahl" text="{= ${TotalClearedNvesModel>/results}.length + ${CurrentSittingClearedNvesModel>/results}.length + ${TotalLoadedNvesModel>/results}.length + ${CurrentSittingLoadedNvesModel>/results}.length}   /{= ${ReceivedLoadingUnitsModel>/results}.length}"></Text>
                        </content>
                    </OverflowToolbar>
                    <Tree id="NVETree" items="{LoadingUnitsModel>/results}" ><!-- toggleOpenState="onExpand" -->
                        <!--<StandardTreeItem type="Active"  title="{LoadingUnitsModel>label1}" press="onCheckTreeItemPress"></StandardTreeItem>-->
                        <CustomTreeItem type="Active" ><!--press="onCheckTreeItemPress"-->
                            <content>
                                <HBox>
                                    <Title text="{LoadingUnitsModel>label1}" class="sapUiLargeMarginEnd sapUiSmallMarginTop"/>
                                    <Button text="{i18n>clearing}" visible="{= ${LoadingUnitsModel>DetailedInformations} === undefined ? false : true}" press="onClearingButtonPress"></Button>
                                </HBox>
                            </content>
                        </CustomTreeItem>
                    </Tree>
                    <Button id="handeingabebtn" icon="sap-icon://simulate" text="{i18n>handeingabe}" press="onManualNveInputFragmentOpen"/>
                    <Button id="btnAllesQuittieren" text="{i18n>allesQuittieren}" icon="sap-icon://accept" press="checkForRemainingNves"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <Button text="{i18n>save}" id="savebtn" press="checkIfSavingIsNesseccary"/>
                </contentLeft>
                <contentMiddle>
                    <!--<Button type="Emphasized" text="Test" press="onTest"/>-->
                </contentMiddle>
                <contentRight>
                    <Button text="{i18n>dialogCloseButtonText}" press="checkForUnsavedNves"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>