<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:vbm="sap.ui.vbm"
  controllerName="podprojekt.controller.MapView"
>
  <App id="mapview">
    <pages>
      <Page id="MapViewPageId" title="{i18n>mapTitle}">
        <content>

          <vbm:GeoMap id="GeoMap" width="100%" height="30em" centerPosition="7.46;51.5643" initialZoom="7" mapConfiguration="{GeoMapProvider>/mapConfig}">
              <vbm:vos>
                  <vbm:Spots click="onClickGeoMapSpot" scaleChangeable="false" items="{SpotModel>/spot}">
                    <vbm:items>
                      <vbm:Spot id="Spot" position="{SpotModel>pos}" text="{SpotModel>text}" tooltip="{SpotModel>tooltip}" type="{SpotModel>type}" contextMenu="onContextMenuSpot">
                      </vbm:Spot>
                    </vbm:items>
                  </vbm:Spots>
              </vbm:vos>
                <!--Legende, falls mal eine erwÃ¼nscht sein sollte, wirft derzeit aber einen Fehler, den ich nicht so ohne weiteres Beheben kann.
                <vbm:legend>
                  <vbm:Legend id="GeoMapLegend" caption="Legend">
                    <vbm:LegendItem text="Default spot" image="PinBlue.png" />
                    <vbm:LegendItem text="Spot with icon" image="PinGreen.png" />
                    <vbm:LegendItem text="Spot with 1 digit" image="PinRed.png" />
                    <vbm:LegendItem text="Spot with 3 digits" image="PinOrange.png" />
                    <vbm:LegendItem text="Spot with 5 digits" image="PinGrey.png" />
                  </vbm:Legend>
                </vbm:legend>
                -->
            </vbm:GeoMap>
        </content>
        <footer>
          <Bar id="mapbar">
            <contentLeft>
              <Button type="Emphasized" icon="sap-icon://locate-me" text="{i18n>ownLocation}" press="onGetCurrentPosition"></Button>
            </contentLeft>
            <contentRight>
              <Button type="Emphasized" text="{i18n>targetLocation}" icon="sap-icon://target-group" press="onToTargetPosition"></Button>
            </contentRight>
          </Bar>
        </footer>
      </Page>
    </pages>
  </App>
</mvc:View>