<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:layout="sap.ui.layout" 
	xmlns:form="sap.ui.layout.form">

	<Dialog id="TourstartDialog" initialFocus="kilometerInput" afterOpen="setInputFocus">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label design="Bold" text="{i18n>tourstarttitle}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<form:SimpleForm id="TourstartForm" layout="ResponsiveGridLayout" title="" labelSpanXL="2" labelSpanL="2" labelSpanM="2">
				<form:content>
					<Label text="{i18n>KennzEing}"/>
					<Input id="kennzeichenInput" value="{TourStartFragmentModel>/tour/licensePlate}" editable="false"/>
					<Label text="{i18n>KilomEing}"/>
					<Input id="kilometerInput" value="{TourStartFragmentModel>/mileage}" type="Number" showClearIcon="true"/>
				</form:content>
			</form:SimpleForm>
		</content>

		<beginButton>
            <Button id="TourstartFragmentButtonConfirm" text="{i18n>dialogOkButtonText}" type="Emphasized" press="onTourStartDialogButtonCallback"/>
        </beginButton>
        <endButton>
            <Button id="TourstartFragmentButtonAbort" text="{i18n>dialogCloseButtonText}" type="Emphasized" press="onTourStartDialogButtonCallback"/>
        </endButton>		
	</Dialog>
</core:FragmentDefinition>