<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:layout="sap.ui.layout"
>

    <Dialog id="TourStatisticsDialog" title="{i18n>tourStatiscticsDialogTitle}&#13;{i18n>buildNo}" initialFocus="" afterOpen="" >
        <customHeader>
			<Bar>
				<contentMiddle>
					<Title text="{i18n>tourStatiscticsDialogTitle}&#13;{i18n>buildNo}"/>
				</contentMiddle>
			</Bar>
		</customHeader>

        <content><!--WICHTIG: Die normale Form ist nicht mit dem viz Kompatibel, daher Layout NICHT ÄNDERN: Dezember 2024-->
            <layout:FixFlex id='chartFixFlex' minFlexSize="350">
                <layout:flexContent>
					<viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}" height='100%' width="100%" vizType='pie' selectData="onVizFrameSelectData">
                    <!--Hexcodes: Rot, Blau, Grün-->
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{TourModel>/resultsForDiagram}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition name="Status" value="{TourModel>routeStatusLabel}" />
                                        <!--Expression-Binding wird nicht unterstützt: Dezember 2024-->
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition name="Anzahl" value="{TourModel>Anzahl}" />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>

                        <viz:feeds>
                            <viz.feeds:FeedItem uid="size" type="Measure" values="Anzahl" />
                            <viz.feeds:FeedItem uid="color" type="Dimension" values="Status" />
                        </viz:feeds>
                    
                        <viz:dependents>
                            <viz:Popover id="idPopOver">

                            </viz:Popover>
                        </viz:dependents>
                    </viz:VizFrame>
                </layout:flexContent>
            </layout:FixFlex>
		</content>


        <beginButton>
            <Button id="TourStatisticsButtonConfirm" text="{i18n>ok}" type="Emphasized" press="TourStatisticsDialogClose"/>
        </beginButton>
        <endButton>
            
        </endButton>	

    </Dialog>

</c:FragmentDefinition>