<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:layout="sap.ui.layout" 
    xmlns:form="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:upload="sap.m.upload">

    <Dialog id="clearDialog" title="={i18n>clearing}" state="None" afterOpen="onFocusTA" afterClose="" >
        <customHeader>
            <!--custom Header Items-->
            <Bar id="clearDialogHeaderBar">
                <contentLeft>
                    <Title id="clearDialogTitle" text="{i18n>clearing}&#13;"/><!--{CurrentClearingObjectModel>/clearingObject/ProductId} Das gibt die Lieferscheinnummer an-->
                </contentLeft>
            </Bar>
        </customHeader>
            <content>
                <form:SimpleForm id="clearDialogForm" editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="2" labelSpanL="2" labelSpanM="2"  >
                    <form:content>
                
                    <List id="ClearingList" items="{CurrentSittingClearingNvesModel>/results}" mode="SingleSelectLeft">
                        <headerToolbar>
                            <OverflowToolbar id="OvtbTourselect">
                                <Title id="ueberschrift" text="Mögliche Klärgründe:" level="H1"/>
                            </OverflowToolbar>
                        </headerToolbar>
                        <StandardListItem title="{CurrentSittingClearingNvesModel>Description}" selected="{CurrentSittingClearingNvesModel>value}" wrapping="true" press="setPressedTour"/>
                    </List>
                    <Label id="txtBemerkung" text="{i18n>bemerkungen}"/>
                    <TextArea id="taBemerkungen" value="{CurrentSittingClearingNvesModel>/remarks}"></TextArea>
                    <ToggleButton id="fotoListeToggleButton" icon="{=${settings>/photoListClearingVisible} === true ? 'sap-icon://less' : 'sap-icon://add'}" text="{i18n>photoliste}" pressed="{settings>/photoListClearingVisible}"/>
                    <Label/>
                    <Button id="addPhotoBtn" icon="sap-icon://add-photo" text="{i18n>foto}" press="selectCheck" class="sapUiVisibleOnlyOnDesktop"/>
                    <Label/>
                    <!--<u:FileUploader id="btnAddPhoto" buttonOnly="true" buttonText="{i18n>foto}" icon="sap-icon://add-photo" useMultipart="false" mimeType="image/*" change="onFotoMobile" width="100%" class="sapUiHideOnDesktop"/>-->
                    <upload:UploadSet id="photoClearingList" visible="{= ${settings>/photoListClearingVisible}}" fileTypes="png, image/*" instantUpload="false"
                        items="{path:'PhotoModelUnloading>/results', 
                            sorter: {path:'photoType', descending: false, 
                                group: true},
                                    groupHeaderFactory:'.formatter.getPhotoTypeHeader'}"> 
                        <upload:toolbar>
                            <OverflowToolbar >
                                <ToolbarSpacer/>
                                <Button
                                        id="uploadSelectedButton"
                                        text="Upload selected"
                                        press="onUploadSelectedButton"/>
                                <Button
                                        id="downloadSelectedButton"
                                        text="Download selected"
                                        press="onDownloadSelectedButton"/>
                                <upload:UploadSetToolbarPlaceholder />
                            </OverflowToolbar>
                        </upload:toolbar>
                        <upload:items >
                            <upload:UploadSetItem
                                    fileName="{PhotoModelUnloading>fileName}"
                                    url="{PhotoModelUnloading>url}"
                                    mediaType="{mediaType}"
                                    thumbnailUrl="{PhotoModelUnloading>src}"
                                    uploadState="{uploadState}">
                                <upload:markers>
                                    <ObjectMarker
                                            type="{type}"
                                            visibility="TextOnly"/>
                                </upload:markers>
                                
                                <upload:statuses>
                                    <ObjectStatus
                                            title="{PhotoModelUnloading>photoType}"
                                            text="{text}"
                                            state="{state}"
                                            icon="{icon}"
                                            active="{active}"/>
                                </upload:statuses>
                            
                            </upload:UploadSetItem>
                        </upload:items>
                    </upload:UploadSet>

                    <List id="fotoListe" items="{PhotoModelUnloading>/results}" mode="Delete" delete="onDelete" visible="false" showNoData="false">
                        <CustomListItem >
                            <HBox >
                                <Image src="{PhotoModelUnloading>fotoSrc}" height="auto"/>
                                <form:SimpleForm >
                                    <form:content>
                                        <Text text="{PhotoModelUnloading>fotoId}"/>
                                    </form:content>
                                </form:SimpleForm>
                            </HBox>
                        </CustomListItem>
                    </List>
                    </form:content>
                </form:SimpleForm>
            </content>
            <beginButton>
                <Button id="clearNVEOkBtn" icon="sap-icon://accept" type="Emphasized" text="{i18n>ok}" press="nveClearingDialogConfirm"/>
            </beginButton>
            <endButton>
                <Button id="clearNVEBackBtn" icon="sap-icon://error" type="Emphasized" text="{i18n>Zurück}" press="nveClearingDialogReject"/>
            </endButton>
    </Dialog>
</core:FragmentDefinition>