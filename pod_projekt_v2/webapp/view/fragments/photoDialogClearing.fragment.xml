<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Dialog id="photoDialogClearing" afterOpen="addCameraPlayerToCameraDialog" afterClose="">
        <customHeader>
            <Bar >
                <contentLeft>
                    <Title id="photoDialogClearingTitle" text="{= ${PhotoTypeSelectedModel>/type}.photoTyp} ({= ${PhotoTypeSelectedModel>/type}.photo.length})"></Title>
                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onPhotoDialogClearingClose"></Button>
                </contentRight>
            </Bar>
        </customHeader>
		<content>
            <core:HTML id="photoDialogClearingVideoFeedContainer"/>
            <form:SimpleForm id="sfFoto">
                <form:content>
                    <Button icon="sap-icon://add-photo" text="{i18n>foto}" press="checkIfPhotoNeedsToBeCleared"></Button>
                    <Image src="{= ${LatestPhotoModel>/photo}.src}" width="{= ${LatestPhotoModel>/photo}.width}" height="{= ${LatestPhotoModel>/photo}.heigth}"/>
                    <Button icon="sap-icon://action" text="{i18n>uebernehmen}" press="onCheckIfPhotoTaken"></Button>
                </form:content>
            </form:SimpleForm>
		</content>
	</Dialog>
</core:FragmentDefinition>